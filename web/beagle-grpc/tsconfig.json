{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src/"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
